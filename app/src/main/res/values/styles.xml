<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EmptyText">
        <item name="android:textSize">@dimen/empty_text</item>
        <item name="android:textColor">@color/empty</item>
    </style>

    <style name="Section">
        <item name="android:background">@drawable/round_background</item>
        <item name="android:textColor">@color/section</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:paddingLeft">@dimen/text_padding</item>
        <item name="android:paddingRight">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding</item>
    </style>

    <style name="Headline">
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Date">
        <item name="android:textSize">@dimen/date</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Author">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
